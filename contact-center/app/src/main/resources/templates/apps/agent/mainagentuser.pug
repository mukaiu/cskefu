                            }
                            lis = lis + data;
                            $('#chat_msg_list').prepend(data)
                        }
                    });
                    //执行下一页渲染，第二参数为：满足“加载更多”的条件，即后面仍有分页
                    //pages为Ajax返回的总页数，只有当前页小于总页数的情况下，才会继续出现加载更多
                    pages = '#{agentUserMessageList.totalElements}' / 20
                    next(lis.join(''), page < pages); //假设总页数为 10
                }, 500);
            }
        });
